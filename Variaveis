using System;

namespace Course
{
    class Program
    {
        static void Main(string[] args)
        {
            int a = 10;
            Console.WriteLine(a);
            a += 2;
            Console.WriteLine(a);
            a *= 3;
            Console.WriteLine(a);

            string s = "ABC";
            Console.WriteLine(s);

            s += "DEF";
            Console.WriteLine(s);

            int a = 10;
            a++;
            Console.WriteLine(a);
            int b = 10;
            b--;
            Console.WriteLine(b);

            int c = 10;
            int d = c++;
            Console.WriteLine(c);
            Console.WriteLine(d);
            d--;
            d = ++c;
            Console.WriteLine(d);


        }
    }
}

